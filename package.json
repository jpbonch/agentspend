{
  "name": "@jpbonch/ferrite",
  "version": "0.3.4",
  "description": "Ferrite CLI for agent access to APIs",
  "files": [
    "dist",
    "SKILL.md",
    "openclaw.plugin.json"
  ],
  "type": "module",
  "bin": {
    "ferrite": "dist/index.js",
    "ferrite-mcp": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "dev:local": "tsx src/dev-index.ts",
    "dev:mcp": "tsx src/mcp-server.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "skills:validate": "node scripts/validate-skills-manifest.mjs"
  },
  "openclaw": {
    "extensions": [
      "./dist/openclaw-plugin/index.js"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "bcryptjs": "^2.4.3",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
